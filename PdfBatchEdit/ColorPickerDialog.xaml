<Window x:Class="PdfBatchEdit.ColorPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PdfBatchEdit"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Pick Color" Height="351.368" Width="250" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="300" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <xctk:ColorCanvas Name="colorCanvas" Grid.Row="0" Height="250" Background="White" BorderThickness="0" Margin="0,25" />
        <Button Name="okButton" Content="OK" Click="okButton_Click" Margin="10,280,0,0" Grid.RowSpan="2" HorizontalAlignment="Left" Width="86" Height="26" VerticalAlignment="Top" />
        <Button Name="cancelButton" Content="Cancel" Click="cancelButton_Click" Margin="0,280,10,0" Grid.RowSpan="2" HorizontalAlignment="Right" Width="86" Height="26" VerticalAlignment="Top" />
    </Grid>
</Window>
